<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <title>Resume</title>

  <style>
    @page {
      size: A4;
      margin: 16mm 14mm 16mm 14mm;
    }

    /* Local fonts (recommended) */
    @font-face {
      font-family: "Roboto";
      src: url("assets/fonts/Roboto-Regular.ttf");
      font-weight: 400;
      font-style: normal;
    }
    @font-face {
      font-family: "Roboto";
      src: url("assets/fonts/Roboto-Bold.ttf");
      font-weight: 700;
      font-style: normal;
    }
    @font-face {
      font-family: "Roboto";
      src: url("assets/fonts/Roboto-Italic.ttf");
      font-weight: 400;
      font-style: italic;
    }
    @font-face {
      font-family: "Roboto";
      src: url("assets/fonts/Roboto-BoldItalic.ttf");
      font-weight: 700;
      font-style: italic;
    }

    body {
      font-family: "Roboto", Arial, sans-serif;
      font-size: 11.5pt;
      color: #111;
      line-height: 1.35;
      widows: 2;
      orphans: 2;
    }

    .header {
      background: #1f4e79;
      color: #fff;
      padding: 16px 18px;
      border-radius: 6px;
    }

    .header-grid {
      display: table;
      width: 100%;
    }
    .header-left, .header-right {
      display: table-cell;
      vertical-align: top;
    }
    .header-left { width: 58%; }
    .header-right { width: 42%; }

    .name {
      font-size: 24pt;
      font-weight: 700;
      margin: 0 0 4px 0;
    }
    .title {
      font-size: 12.5pt;
      opacity: 0.95;
      margin: 0;
    }
    .contact {
      font-size: 10.5pt;
      margin: 2px 0;
      word-break: break-word;
    }
    .contact b { font-weight: 700; }

    .summary {
      margin: 14px 2px 6px 2px;
      color: #444;
      font-style: italic;
    }

    h2.section {
      font-size: 12pt;
      letter-spacing: 0.5px;
      margin: 14px 0 6px 0;
      text-transform: uppercase;
    }

    .job {
      margin: 10px 0 12px 0;
      page-break-inside: avoid;
    }

    .job-head {
      display: table;
      width: 100%;
    }
    .job-head-left, .job-head-right {
      display: table-cell;
      vertical-align: top;
    }
    .job-head-right {
      text-align: right;
      white-space: nowrap;
      color: #555;
      font-style: italic;
    }

    .job-role {
      font-weight: 700;
      margin: 0;
    }
    .job-company {
      margin: 2px 0 6px 0;
      color: #555;
      font-style: italic;
    }

    ul.bullets {
      margin: 6px 0 0 18px;
      padding: 0;
    }
    ul.bullets li { margin: 2px 0; }

    .taglist {
      columns: 2;
      -webkit-columns: 2;
      -moz-columns: 2;
      margin: 6px 0 0 0;
      padding-left: 16px;
    }

    .page-break {
      page-break-before: always;
    }

    a { color: #fff; text-decoration: none; }
    .content a { color: #1f4e79; text-decoration: none; }
  </style>
</head>

<body>
  <div class="header">
    <div class="header-grid">
      <div class="header-left">
        <p class="name">{{ full_name }}</p>
        <p class="title">{{ title }}</p>
      </div>
      <div class="header-right">
        {% if contacts.phone %}<div class="contact"><b>Phone:</b> {{ contacts.phone }}</div>{% endif %}
        {% if contacts.email %}<div class="contact"><b>Email:</b> {{ contacts.email }}</div>{% endif %}
        {% if contacts.telegram %}<div class="contact"><b>Telegram:</b> {{ contacts.telegram }}</div>{% endif %}
        {% if contacts.linkedin %}<div class="contact"><b>LinkedIn:</b> {{ contacts.linkedin }}</div>{% endif %}
        {% if contacts.location %}<div class="contact"><b>Location:</b> {{ contacts.location }}</div>{% endif %}
      </div>
    </div>
  </div>

  <div class="content">
    {% if summary %}
      <div class="summary">{{ summary }}</div>
    {% endif %}

    <h2 class="section">Experience</h2>

    {% for job in experience %}
      <div class="job">
        <div class="job-head">
          <div class="job-head-left">
            <p class="job-role">{{ job.role }}</p>
            <p class="job-company">{{ job.company }}{% if job.location %}, {{ job.location }}{% endif %}</p>
          </div>
          <div class="job-head-right">{{ job.period }}</div>
        </div>

        {% if job.responsibilities %}
          <ul class="bullets">
            {% for item in job.responsibilities %}
              <li>{{ item }}</li>
            {% endfor %}
          </ul>
        {% endif %}

        {% if job.achievements %}
          <ul class="bullets">
            {% for item in job.achievements %}
              <li><b>{{ item }}</b></li>
            {% endfor %}
          </ul>
        {% endif %}

        {% if job.tech_stack %}
          <div style="margin-top: 6px; color: #555;">
            <b>Tech:</b> {{ job.tech_stack | join(", ") }}
          </div>
        {% endif %}
      </div>
    {% endfor %}

    <div class="page-break"></div>

    <h2 class="section">Education</h2>
    {% for ed in education %}
      <div style="margin: 8px 0;">
        <div style="font-weight: 700;">{{ ed.institution }}{% if ed.location %}, {{ ed.location }}{% endif %}</div>
        <div style="color: #555;">
          {{ ed.degree }}{% if ed.field %} â€” {{ ed.field }}{% endif %}
          {% if ed.year %} ({{ ed.year }}){% endif %}
        </div>
      </div>
    {% endfor %}

    <h2 class="section">Skills</h2>
    {% if skills %}
      <ul class="taglist">
        {% for s in skills %}
          <li>{{ s }}</li>
        {% endfor %}
      </ul>
    {% endif %}

    <h2 class="section">Certifications</h2>
    {% if certifications %}
      <ul class="bullets">
        {% for c in certifications %}
          <li>{{ c }}</li>
        {% endfor %}
      </ul>
    {% endif %}

    <h2 class="section">Languages</h2>
    {% if languages %}
      <ul class="bullets">
        {% for l in languages %}
          <li>{{ l }}</li>
        {% endfor %}
      </ul>
    {% endif %}
  </div>
</body>
</html>